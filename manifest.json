{
  "manifest_version": 2,
  "name": "VC Espresso Screenshare",
  "description": "A simple extension that allows you to stream your desktop into meetings with VC Espresso (powered by Mconf).",
  "version": "0.1.7",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "logo-16x16.png",
    "48": "logo-48x48.png",
    "128": "logo-128x128.png"
  },
  "background": {
        "scripts": [ "background.js" ],
        "persistent": true
  },
  "permissions": [
      "desktopCapture"
  ],
  "externally_connectable": {
      "matches": [
          "*://*.redclara.net/*",
          "*://*.cedia.org.ec/*",
          "*://*.conare.ac.cr/*"
      ]
  },
  "web_accessible_resources": [
    "icon.png"
  ]
}
